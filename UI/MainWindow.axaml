<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DBCycle.MainWindow"
        Title="DBCycle" Width="800" Height="650"
        Background="#1B1324">

  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="Background" Value="#292038" />
      <Setter Property="Foreground" Value="#F3E5FF" /> <!-- Light lavender text -->
      <Setter Property="BorderBrush" Value="#F3E5FF" />
      <Setter Property="BorderThickness" Value="2" />
    </Style>
    <Style Selector="Button:hover">
      <Setter Property="Background" Value="#F3E5FF" />
      <Setter Property="Foreground" Value="#1B1324" />
    </Style>
  </Window.Styles>

  <Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
      <TextBlock Text="Welcome to DBCycle" 
                 HorizontalAlignment="Center" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 Foreground="#E6DFFF" />

      <CheckBox Name="DeveloperModeCheckBox" 
                Content="Developer Mode" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0"
                Foreground="#F3E5FF">
        <ToolTip.Tip>
          <TextBlock Text="Drops and reinitializes the database with extended logging." 
                     FontSize="16" 
                     Foreground="#E6DFFF" />
        </ToolTip.Tip>
      </CheckBox>

      <StackPanel Orientation="Horizontal" 
                  HorizontalAlignment="Center" 
                  Spacing="10">
        <!-- Reusable styled buttons -->
        <Button Content="Import" Click="Import_Click" Width="100" />
        <Button Content="Export" Click="Export_Click" Width="100" />
        <Button Content="Settings" Click="Settings_Click" Width="100" />
        <Button Content="Copy Log" Click="CopyLog_Click" Width="100" />
        <Button Content="Single File" Click="SingleFile_Click" Width="100" />
      </StackPanel>

      <ScrollViewer x:Name="LogScrollViewer" 
                    Height="500" 
                    Width="750" 
                    Background="#1E1728" 
                    VerticalScrollBarVisibility="Auto">
        <Border BorderBrush="#E6B3FF" BorderThickness="2" CornerRadius="5" Padding="5">
          <TextBlock x:Name="LogConsole" 
                     TextWrapping="Wrap" 
                     Foreground="#F3E5FF" 
                     Background="#1B1324" />
        </Border>
      </ScrollViewer>
    </StackPanel>
  </Grid>
</Window>

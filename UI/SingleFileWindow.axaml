<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DBCycle.SingleFileWindow"
        Title="Single DBC/DB2 File Viewer" Width="800" Height="600"
        Background="#1B1324"> <!-- Dark background -->

    <!-- Styles for the window -->
    <Window.Styles>
        <!-- DataGrid base style -->
        <Style Selector="DataGrid">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E6B3FF"/> <!-- Light neon purple border -->
            <Setter Property="Background" Value="#292038"/> <!-- Darker purple grid background -->
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#EAE6FF"/> <!-- Light lavender text -->
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="HeadersVisibility" Value="All"/>
        </Style>

        <!-- Style for the DataGrid headers -->
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#4A3B6A"/> <!-- Slightly darker purple header -->
            <Setter Property="Foreground" Value="#F3E5FF"/> <!-- Even lighter header text -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style for DataGrid rows -->
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="#292038"/>
            <Setter Property="Foreground" Value="#EAE6FF"/>
        </Style>

        <!-- Style for DataGrid cells -->
        <Style Selector="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#EAE6FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Separate style for selected DataGrid cells -->
        <Style Selector="DataGridCell:selected">
            <Setter Property="Background" Value="#D490F5"/> <!-- Neon purple -->
            <Setter Property="Foreground" Value="#1B1324"/> <!-- Invert text on selected -->
        </Style>
    </Window.Styles>

    <DockPanel Margin="10">
        <!-- Top section with buttons -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Select File Button (Left) -->
            <Button Content="Select File" 
                    Name="SelectFileButton" 
                    Grid.Column="0"
                    Margin="0,0,10,0" 
                    Width="120" 
                    Background="#292038" 
                    Foreground="#F3E5FF" 
                    BorderBrush="#E6B3FF" 
                    BorderThickness="2">
                <Button.Styles>
                    <Style Selector="Button:hover">
                        <Setter Property="Background" Value="#D490F5"/>
                        <Setter Property="Foreground" Value="#1B1324"/>
                    </Style>
                </Button.Styles>
            </Button>

            <!-- Update Schema Button (Right) -->
            <Button Content="Update Schema" 
                    Name="UpdateSchemaButton" 
                    Grid.Column="2"
                    Width="140" 
                    Background="#292038" 
                    Foreground="#F3E5FF" 
                    BorderBrush="#E6B3FF" 
                    BorderThickness="2">
                <Button.Styles>
                    <Style Selector="Button:hover">
                        <Setter Property="Background" Value="#D490F5"/>
                        <Setter Property="Foreground" Value="#1B1324"/>
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>

        <!-- Display selected file name -->
        <TextBlock x:Name="FileNameTextBlock" 
                   DockPanel.Dock="Top" 
                   Foreground="#F3E5FF" 
                   FontWeight="Bold" 
                   Margin="0,5,0,10"/>

        <!-- Display file info (Rows & Columns) -->
        <TextBlock x:Name="FileInfoTextBlock"
                   DockPanel.Dock="Top"
                   Foreground="#EAE6FF"
                   FontStyle="Italic"
                   Margin="0,5,0,10"/>

        <!-- Error message text block, docked at the bottom -->
        <TextBlock x:Name="ErrorTextBlock" 
                   DockPanel.Dock="Bottom" 
                   Foreground="#FF6E6E" 
                   TextWrapping="Wrap" 
                   Margin="0,10,0,0"/>

        <!-- DataGrid with the updated styling -->
        <DataGrid Name="FileDataGrid" 
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Data">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding .}" 
                                       TextWrapping="Wrap" 
                                       Foreground="#EAE6FF"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
